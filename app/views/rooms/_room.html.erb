<div class="boards">

  <div class="board_main">

    <div class="board_image">
      <%= image_tag room.image.variant(resize: '100x100') ,class:"" if room.image.attached? %>
    </div>

    <div class="board_right">
      <div class="board_right_top">
        <div class="board_title">
          <%= link_to room.room_name, room_messages_path(room) %>
        </div>
        <% if user_signed_in? && current_user.id == room.user_id %>
        <div>
          <div class="board_edit">
            <%= link_to "編集", edit_room_path(room.id), method: :get %>
          </div>
          <div class="board_delete">
          削除
          </div>
        </div>
        <% end %>
      </div>
      <div class="board_sub">
        <div>
        <%= room.category.category %>
        </div>
        <div>
        管理者：
        <%= room.user.nickname %> /
        <%= l room.created_at %>
        </div>
      </div>
    </div>

  </div>

</div>
